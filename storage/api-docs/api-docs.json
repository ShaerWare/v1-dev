        "/api/send-sms": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Получение смс для верификации. Если телефон не зарегестрирован в системе - он зарегестрируется и все равно получит СМС.",
                "description": "Отправляет SMS с кодом подтверждения на указанный номер телефона.",
                "operationId": "98ddc0112e6e4d69c243b730e98a9885",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "phone"
                                ],
                                "properties": {
                                    "phone": {
                                        "type": "string",
                                        "example": "9001234567"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "SMS отправлено",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Код подтверждения отправлен."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка отправки SMS"
                    }
                }
            }
        },
        "/api/verify-sms": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Подтверждение кода и авторизация",
                "description": "Проверяет код из SMS и выдаёт токен пользователю.",
                "operationId": "580a84028119c207b49ffc17faaf28d4",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "phone",
                                    "code"
                                ],
                                "properties": {
                                    "phone": {
                                        "type": "string",
                                        "example": "9001234567"
                                    },
                                    "code": {
                                        "type": "string",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Успешная авторизация",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "phone": {
                                                    "type": "string",
                                                    "example": "+79001234567"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Неверный код или срок действия истёк"
                    }
                }
            }
        },
        "/api/auth-banners": {
